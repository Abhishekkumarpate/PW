#include <iostream>
using namespace std;

int main() {
    int num, sum =0;
    cout << "Enter a 3-digit number: ";
    cin >> num;

    sum += num % 10;        
    num /= 10;              
    sum += num % 10;      
    num /= 10;              
    sum += num;             

    cout << "Sum of the digits: " << sum << endl;

    return 0;
}
